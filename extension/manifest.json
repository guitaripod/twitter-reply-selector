{
  "manifest_version": 3,
  "name": "Twitter Reply Auto-Selector",
  "version": "1.0",
  "description": "Automatically sets reply visibility to 'Verified accounts' when composing tweets",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*", "https://pro.x.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*", "https://pro.x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
